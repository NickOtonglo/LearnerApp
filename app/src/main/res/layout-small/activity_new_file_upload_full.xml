<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:padding="10sp"
    tools:context="pesh.mori.learnerapp.NewFileUpload"
    android:orientation="vertical"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="360sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/upload_full_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="8dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:text="File type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radio_upload_full_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Image"/>

                    <RadioButton
                        android:id="@+id/radio_upload_full_audio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Audio"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/radio_upload_full_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video"
                        android:layout_weight="1"/>

                </LinearLayout>

            </RadioGroup>

            <!--Image layout-->
            <LinearLayout
                android:id="@+id/upload_full_layout_2"
                android:layout_marginTop="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_full_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
                    android:text="Select image"
                    android:textAllCaps="false"
                    android:background="@drawable/input_outline_greenss"
                    android:textColor="@color/white"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:id="@+id/btn_upload_full_select_image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/input_outline_greenss"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />

            </LinearLayout>

            <!--Audio layout-->
            <LinearLayout
                android:id="@+id/upload_full_layout_3"
                android:layout_marginTop="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_full_select_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
                    android:text="Select audio"
                    android:textAllCaps="false"
                    android:background="@drawable/input_outline_greenss"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/btn_full_play_audio"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
                    android:src="@mipmap/baseline_play_circle_outline_white_18dp"
                    android:textAllCaps="false"
                    android:background="@drawable/input_outline_greenss"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!--Video layout-->
            <LinearLayout
                android:id="@+id/upload_full_layout_4"
                android:layout_marginTop="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_full_select_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_gravity="center"
                    android:text="Select video"
                    android:textAllCaps="false"
                    android:background="@drawable/input_outline_greenss"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/btn_upload_full_select_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/input_outline_greenss"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_full_layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txt_upload_full_file_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:padding="15sp"
                    android:background="@drawable/input_outline"
                    android:layout_below="@+id/imageButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="Title..."/>

                <EditText
                    android:id="@+id/txt_upload_full_file_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_outline"
                    android:ems="10"
                    android:layout_marginTop="15sp"
                    android:padding="15sp"
                    android:layout_below="@+id/txt_title_post"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="Description..."/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/upload_full_layout_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Institution"/>
                    <Spinner
                        android:id="@+id/spinner_upload_full_institution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="School/Faculty"/>
                    <Spinner
                        android:id="@+id/spinner_upload_full_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Department"/>
                    <Spinner
                        android:id="@+id/spinner_upload_full_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Course Unit/Level"/>
                    <Spinner
                        android:id="@+id/spinner_upload_full_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_upload_full_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price (Tokens)"/>
                    <EditText
                        android:id="@+id/txt_file_price_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:hint="0.00"
                        android:inputType="numberDecimal"/>
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="15sp"-->
                <!--android:orientation="vertical">-->
                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Instructor/Creator"/>-->
                <!--<Spinner-->
                <!--android:id="@+id/spinner_upload_full_instructor"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->
                <!--</LinearLayout>-->

            </LinearLayout>

            <Button
                android:id="@+id/btn_upload_full_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_gravity="center"
                android:text="Upload file"
                android:textAllCaps="false"
                android:background="@drawable/input_outline_greenss"
                android:textColor="@color/white"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
