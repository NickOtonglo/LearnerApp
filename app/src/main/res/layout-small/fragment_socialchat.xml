<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/socialchat"
    android:background="@color/colorPrimaryDark"
    tools:ignore="HardcodedText"
    tools:context="pesh.mori.learnerapp.socialchat">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="academic essay"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="academic thesis"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="academic project "
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="academic proposal "
            android:textStyle="bold"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="130dp"
        android:id="@+id/textInputLayouttitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTexttitle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:maxLength="50"
            android:hint="select a title"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutInstitution"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="180dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextInstitution"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:maxLength="50"
            android:hint="enter your learning institution"
            android:drawableStart="@drawable/ic_location_city_black_24dp"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="230dp"
        android:id="@+id/textInputLayoutdeadline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextdeadline"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="deadline"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="date"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="280dp"
        android:id="@+id/textInputLayoutamount">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextamount"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="amount payable"
            android:drawableStart="@drawable/ic_monetization_on_black_24dp"
            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your contact details"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:layout_marginTop="330dp"
        android:padding="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="360dp"
        android:id="@+id/textInputLayoutphone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextphone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="phone number"
            android:maxLength="10"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="text|number"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="420dp"
        android:id="@+id/textInputLayoutemail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextemail"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="email address"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>








    <Button
        android:id="@+id/find"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom|end"
        android:textColor="@color/grey"
        android:background="@color/colorPrimary"
        android:text="Find"
        android:textStyle="bold"
        android:textSize="15sp"/>


</FrameLayout>
