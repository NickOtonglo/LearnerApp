<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190sp"
    android:background="@drawable/background_gradient_main"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="8sp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_main_header_profile"
            android:layout_width="73sp"
            android:layout_height="73sp"
            app:srcCompat="@android:mipmap/sym_def_app_icon"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFF"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_main_header_profile_default"
            android:layout_width="73sp"
            android:layout_height="73sp"
            app:srcCompat="@android:mipmap/sym_def_app_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="1sp"
            android:layout_margin="6sp"
            app:civ_fill_color="@color/white"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="Token Balance:" />

            <TextView
                android:id="@+id/txt_header_tokens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="0.00"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Loading..."
        android:textStyle="bold"
        android:layout_gravity="bottom|left"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</FrameLayout>
