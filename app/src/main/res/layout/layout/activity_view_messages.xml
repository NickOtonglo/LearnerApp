<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMessagesActivity"
    android:orientation="vertical"
    android:background="?attr/attrBackgroundColor">

    <include
        layout="@layout/app_bar_layout_main"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_msg_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_sent_at"
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"/>

                    <TextView
                        android:id="@+id/txt_view_msg_msg_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_secondary_padding"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_sender"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_msg_msg_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/title_title"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_msg_msg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_message"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_msg_msg_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_view_msg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_msg_view_bid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_small_margin"
                    android:layout_marginRight="@dimen/button_small_margin"
                    android:layout_weight="1"
                    android:text="@string/option_review_bid"
                    android:background="@drawable/button_primary"
                    android:textAllCaps="false"
                    android:textColor="?attr/attrButtonTextColor"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_msg_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_small_margin"
                    android:layout_marginRight="@dimen/button_small_margin"
                    android:layout_weight="1"
                    android:text="@string/option_delete_message"
                    android:background="@drawable/button_primary"
                    android:backgroundTint="@color/colorDanger"
                    android:textAllCaps="false"
                    android:textColor="?attr/attrButtonTextColor"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
