<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBidActivity"
    android:orientation="vertical"
    android:background="?attr/attrBackgroundColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view_bid_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_posted_at"
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"/>

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_secondary_padding"/>
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/ic_baseline_person_24_theme"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_bidder"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_bid_bid_sender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:ellipsize="none"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_item"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_bid_bid_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:ellipsize="none"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_original_price"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_bid_bid_price_old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:ellipsize="none"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_bidder_s_offer"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_view_bid_bid_price_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:ellipsize="none"
                    android:textStyle="bold"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:id="@+id/txt_view_bid_bid_blank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_view_bid_bid_blank_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_view_bid_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_bid_view_approve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_small_margin"
                    android:layout_marginRight="@dimen/button_small_margin"
                    android:layout_weight="1"
                    android:text="@string/option_approve"
                    android:background="@drawable/button_primary"
                    android:textAllCaps="false"
                    android:textColor="?attr/attrButtonTextColor"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_bid_view_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_small_margin"
                    android:layout_marginRight="@dimen/button_small_margin"
                    android:layout_weight="1"
                    android:text="@string/option_reject"
                    android:background="@drawable/button_primary"
                    android:backgroundTint="@color/colorDanger"
                    android:textAllCaps="false"
                    android:textColor="?attr/attrButtonTextColor" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
