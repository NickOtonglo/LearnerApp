<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/body_padding_bottom"
    tools:context=".GoogleAuthHandlerActivity"
    android:background="?attr/attrBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_authenticating_please_wait"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_secondary_size"
            android:textColor="?attr/attrTextSecondaryColor"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_margin="20sp"/>

    </LinearLayout>

</FrameLayout>