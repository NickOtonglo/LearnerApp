<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_big_height"
    android:layout_margin="@dimen/card_big_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <ImageView
                android:id="@+id/img_thumbnail_big"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_big_thumbnail_height"
                android:layout_gravity="top"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/card_big_bottom_section_padding">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_author_big"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24_theme"
                app:civ_border_color="?attr/attrTextColor"
                app:civ_border_width="1sp"
                android:layout_margin="6sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_gravity="bottom">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_title_big"
                        android:layout_width="match_parent"
                        android:layout_height="23sp"
                        android:layout_margin="4sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="?attr/attrTextColor"
                        android:hint="@string/link_loading"
                        android:textSize="@dimen/text_primary_size"/>
                    <TextView
                        android:id="@+id/txt_time_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?attr/attrTextColor"
                        android:hint="@string/link_loading"
                        android:textSize="@dimen/text_tertiary_size"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/txt_author_big"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="?attr/attrTextColor"
                        android:hint="@string/link_loading"
                        android:textSize="@dimen/text_secondary_size"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>