<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTransactionActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="?attr/attrBackgroundColor">

    <include
        layout="@layout/app_bar_layout_main"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_transaction_time"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/link_loading"
                    android:textColor="?attr/attrTextColor"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_secondary_padding"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_reference_number"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_ref"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:id="@+id/txt_item_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/hint_item"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/label_transaction_cost"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/label_prior_balance"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_bal_prev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/label_new_balance"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_bal_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:text="@string/label_reference_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"/>

                <TextView
                    android:id="@+id/txt_ref_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_item"/>

                <TextView
                    android:id="@+id/txt_item_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_transaction_cost"/>

                <TextView
                    android:id="@+id/txt_amount_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_prior_balance"/>

                <TextView
                    android:id="@+id/txt_bal_prev_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_new_balance"/>

                <TextView
                    android:id="@+id/txt_bal_new_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_account_number"/>

                <TextView
                    android:id="@+id/txt_account_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textColor="?attr/attrTextSecondaryColor"
                    android:textSize="@dimen/text_secondary_size"
                    android:padding="@dimen/text_secondary_padding"
                    android:text="@string/label_exchange_rate_one_usd_to_kes"/>

                <TextView
                    android:id="@+id/txt_rate_tk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_primary_size"
                    android:padding="@dimen/text_input_padding"
                    android:textColor="?attr/attrTextColor"
                    android:text="@string/link_loading" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
