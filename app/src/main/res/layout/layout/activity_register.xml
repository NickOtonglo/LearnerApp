<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/changeemails"
    android:orientation="vertical"
    tools:context=".RegistrationActivity_Initial"
    android:background="?attr/attrBackgroundColor">

    <include
        layout="@layout/app_bar_layout_main"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_parent_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_input_padding"
                    android:layout_marginBottom="@dimen/text_input_margin"
                    android:background="@drawable/input_outline"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:ems="10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="@string/hint_enter_your_first_name"
                    android:textColor="?attr/attrTextColor"
                    android:textSize="@dimen/text_input_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_parent_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_input_padding"
                    android:layout_marginBottom="@dimen/text_input_margin"
                    android:background="@drawable/input_outline"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:ems="10"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:hint="@string/hint_enter_your_last_name"
                    android:textColor="?attr/attrTextColor"
                    android:textSize="@dimen/text_input_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_parent_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_input_padding"
                    android:layout_marginBottom="@dimen/text_input_margin"
                    android:background="@drawable/input_outline"
                    android:inputType="date"
                    android:maxLines="1"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                    android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                    android:hint="@string/hint_enter_your_dob"
                    android:textColor="?attr/attrTextColor"
                    android:textSize="@dimen/text_input_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_parent_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_input_padding"
                    android:layout_marginTop="@dimen/text_input_margin"
                    android:background="@drawable/input_outline"
                    android:inputType="textEmailAddress"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableRight="@drawable/ic_baseline_email_24"
                    android:drawableEnd="@drawable/ic_baseline_email_24"
                    android:hint="@string/hint_enter_your_email_address"
                    android:textColor="?attr/attrTextColor"
                    android:textSize="@dimen/text_input_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/button_small_padding"
                android:paddingRight="@dimen/button_small_padding"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:text="@string/link_next"
                android:textAllCaps="false"
                android:background="@drawable/button_primary"
                android:textColor="?attr/attrButtonTextColor"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>