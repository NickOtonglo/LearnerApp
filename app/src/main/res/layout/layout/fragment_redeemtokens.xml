<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/redeemtokens"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TokensActivity_RedeemTokensFragment"
    android:orientation="vertical"
    android:background="?attr/attrBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:text="@string/info_token_get_started"
            android:textSize="@dimen/text_secondary_size"
            android:textColor="?attr/attrTextSecondaryColor"/>

        <TextView
            android:id="@+id/txt_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorLinkBlue"
            android:textSize="@dimen/text_primary_size"
            android:text="Loading..."/>
    </LinearLayout>

</FrameLayout>
