<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/attrBackgroundColor"
    tools:context=".ReportPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_why_are_you_reporting_this_post"
            android:textColor="?attr/attrTextSecondaryColor"
            android:textSize="@dimen/text_secondary_size"
            android:padding="@dimen/text_secondary_padding"
            android:gravity="center_horizontal"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:text="@string/radio_adult_content"
                android:id="@+id/adult_content"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:text="@string/radio_illegal_content"
                android:id="@+id/illegal_content"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:id="@+id/abusive_content"
                android:text="@string/radio_abusive_content" />
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:text="@string/radio_malicious_content"
                android:id="@+id/malicious_content"/>
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:id="@+id/copyright_infringement"
                android:text="@string/radio_copyright_infringement" />
            <androidx.appcompat.widget.AppCompatRadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_primary_size"
                android:padding="@dimen/text_primary_padding"
                android:text="@string/radio_other"
                android:id="@+id/other_content"/>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/text_input_padding"
                android:layout_marginTop="@dimen/text_input_margin"
                android:background="@drawable/input_outline"
                android:inputType="textMultiLine"
                android:maxLength="3000"
                android:scrollbars = "vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="?attr/attrTextColor"
                android:textSize="@dimen/text_input_text_size"
                android:hint="@string/hint_more_details"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:text="@string/option_submit"
            android:textAllCaps="false"
            android:background="@drawable/button_primary"
            android:textColor="?attr/attrButtonTextColor"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>