<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuyTokenGuide"
    android:background="?attr/attrBackgroundColor">

    <include
        layout="@layout/app_bar_layout_main"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:padding="@dimen/text_secondary_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_buy_token_1"
            android:textColor="?attr/attrTextSecondaryColor"
            android:textSize="@dimen/text_secondary_size"/>
        <TextView
            android:id="@+id/txt_message"
            android:paddingLeft="@dimen/text_secondary_padding"
            android:paddingRight="@dimen/text_secondary_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/attrTextSecondaryColor"
            android:textSize="@dimen/text_secondary_size"
            android:text="@string/help_buy_token_2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_open_stk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:text="@string/option_open_sim_toolkit"
            android:textAllCaps="false"
            android:background="@drawable/button_primary"
            android:textColor="?attr/attrButtonTextColor"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>