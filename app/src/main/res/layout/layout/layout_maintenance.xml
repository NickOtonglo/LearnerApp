<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_maintenance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:layout_marginBottom="70dp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:background="@drawable/background_login_layout"
    android:animateLayoutChanges="true"
    android:elevation="2sp"
    android:orientation="vertical"
    android:padding="20sp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="9sp"
        android:paddingBottom="9sp"
        android:paddingLeft="6sp"
        android:paddingRight="6sp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/alert_system_under_maintenance"
            android:textSize="@dimen/text_primary_size"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_maintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:textSize="@dimen/text_secondary_size"
        android:text="@string/info_please_come_back_later"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/option_exit"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?attr/attrButtonTextColor"
            android:background="@drawable/button_primary"/>
    </LinearLayout>

</LinearLayout>