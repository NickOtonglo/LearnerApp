<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    android:background="?attr/attrBackgroundColor"
    tools:context=".TransactionsActivity">

    <include
        layout="@layout/app_bar_layout_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Image layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_view_file_select_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <!--Audio layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/img_view_file_play_audio"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@color/black"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_view_file_time_play_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_view_file_audio_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    app:srcCompat="@drawable/ic_baseline_audiotrack_24"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/buffer_progress_view_file_audio"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <!--Video layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/img_view_file_play_video"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_view_file_time_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    app:srcCompat="@drawable/ic_baseline_play_arrow_24" />

                <ProgressBar
                    android:id="@+id/buffer_progress_view_file"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="10">

            </LinearLayout>

        </LinearLayout>

        <!--Doc layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfview_file_select_doc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_author"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_person_24_theme"/>
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/text_secondary_padding"
                    android:textSize="@dimen/text_secondary_size"
                    android:text="@string/hint_author"
                    android:textColor="?attr/attrTextSecondaryColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_posted_at"
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"/>

                    <TextView
                        android:id="@+id/txt_view_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_secondary_padding"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/title_title"
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"/>

                    <TextView
                        android:id="@+id/txt_view_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_input_padding"
                        android:ellipsize="none"
                        android:textColor="?attr/attrTextColor"
                        android:text="@string/link_loading" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/hint_price_tokens"
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"/>

                    <TextView
                        android:id="@+id/txt_view_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_input_padding"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/hint_bidding"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_bid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="@dimen/text_input_padding"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/hint_brief"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="15dp"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_coursework"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_institution"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_institution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="15dp"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_faculty"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="15dp"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title_course"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_course"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="15dp"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/layout_non_coursework">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_non_coursework"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textSize="@dimen/text_secondary_size"
                        android:padding="@dimen/text_secondary_padding"
                        android:textColor="?attr/attrTextSecondaryColor"/>

                    <TextView
                        android:id="@+id/txt_view_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_primary_size"
                        android:padding="15dp"
                        android:text="@string/link_loading"
                        android:textColor="?attr/attrTextColor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTransactPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_secondary_padding"
                        android:text="..."
                        android:textColor="?attr/attrTextSecondaryColor"
                        android:textSize="@dimen/text_secondary_size"
                        android:gravity="center"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="1">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTransactBid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/button_small_margin"
                            android:layout_marginRight="@dimen/button_small_margin"
                            android:text="@string/option_bid"
                            android:background="@drawable/button_primary"
                            android:textAllCaps="false"
                            android:textColor="?attr/attrButtonTextColor"
                            android:layout_weight="0.5"
                            android:visibility="gone"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTransactPurchase"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/button_small_margin"
                            android:layout_marginRight="@dimen/button_small_margin"
                            android:text="@string/option_purchase"
                            android:background="@drawable/button_primary"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="?attr/attrButtonTextColor"
                            android:layout_weight="0.5"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTransactCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/button_small_margin"
                        android:text="@string/option_cancel"
                        android:backgroundTint="?attr/attrButtonColor"
                        app:backgroundTint="?attr/attrButtonColor"
                        android:textAllCaps="false"
                        android:textColor="?attr/attrButtonTextColor"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
