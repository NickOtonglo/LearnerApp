<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviewPostActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <include
        layout="@layout/app_bar_layout_main"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Audio layout-->
        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/audio_view"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/btn_play_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_play_arrow_white_24" />

                <ImageView
                    android:id="@+id/btn_audio_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_audiotrack_white_48"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progress_bar_audio"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <!--Video layout-->
        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:adjustViewBounds="true"
                    android:background="#00ffffff"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/btn_play_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_play_arrow_white_24" />

                <ProgressBar
                    android:id="@+id/progress_bar_video"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp"
            android:orientation="vertical">

            <!--Image layout-->
            <LinearLayout
                android:id="@+id/layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/btn_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:adjustViewBounds="true"
                    android:background="#00ffffff"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <!--Doc Layout-->
            <LinearLayout
                android:id="@+id/layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_open_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:elevation="2sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Open document"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted at: "
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/black" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15sp"
                    android:text="Title"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="3sp"
                    android:padding="15sp"
                    android:textColor="@color/black"
                    android:hint="Loading..."
                    android:inputType="textCapCharacters"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15sp"
                    android:text="Price (Tokens)"
                    android:textColor="@color/colorGreen" />

                <EditText
                    android:id="@+id/txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txt_title_post"
                    android:layout_marginTop="3sp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:padding="15sp"
                    android:textColor="@color/colorGreen"
                    android:hint="0.00"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15sp"
                    android:text="Bidding"
                    android:textColor="@color/colorPrimaryDark"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3sp"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/radio_no"
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50sp"/>
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15sp"
                    android:text="Description"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txt_title_post"
                    android:layout_marginTop="3sp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:padding="15sp"
                    android:hint="Loading..."
                    android:textColor="@color/black"/>

                <!-- File -->
                <LinearLayout
                    android:id="@+id/layout_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Institution"
                        android:textColor="@color/colorPrimaryDark"/>

                    <Spinner
                        android:id="@+id/spinner_institution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15sp"
                        android:layout_marginTop="3sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Faculty"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/txt_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginTop="3sp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:hint="Loading..."
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Department"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/txt_department"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3sp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:hint="Loading..."
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Course"
                        android:textColor="@color/colorPrimaryDark"/>

                    <EditText
                        android:id="@+id/txt_course"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="3sp"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:hint="Loading..."
                        android:textColor="@color/black"/>

                </LinearLayout>

                <!-- DIY -->
                <LinearLayout
                    android:id="@+id/layout_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30sp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:text="Tag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <Spinner
                        android:id="@+id/spinner_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15sp"
                        android:layout_marginTop="3sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
