<resources>

    <!-- Base application theme. -->
    <!-- Light (Default) mode. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="attrTextColor">@color/colorTextPrimary</item>
        <item name="attrTextSecondaryColor">@color/colorTextSecondary</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="attrBackgroundColor">@color/colorBackground</item>
        <item name="attrButtonColor">@color/colorButton</item>
        <item name="attrButtonTextColor">@color/colorButtonText</item>
        <item name="attrOutlineColor">@color/colorOutline</item>
        <item name="attrNewIndicator">@color/colorNewIndicatorLight</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Dark mode. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorDarkTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorDarkTextSecondary</item>
        <item name="attrTextColor">@color/colorDarkTextPrimary</item>
        <item name="attrTextSecondaryColor">@color/colorDarkTextSecondary</item>
        <item name="android:textColorHint">@color/colorDarkOutline</item>
        <item name="attrBackgroundColor">@color/colorDarkBackground</item>
        <item name="attrButtonColor">@color/colorDarkButton</item>
        <item name="attrButtonTextColor">@color/colorDarkBackground</item>
        <item name="attrOutlineColor">@color/colorDarkOutline</item>
        <item name="attrNewIndicator">@color/colorNewIndicatorDark</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Signature mode. -->
    <style name="SignatureTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSignaturePrimary</item>
        <item name="colorPrimaryDark">@color/colorSignaturePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorSignatureTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorSignatureTextSecondary</item>
        <item name="attrTextColor">@color/colorSignatureTextPrimary</item>
        <item name="attrTextSecondaryColor">@color/colorSignatureTextSecondary</item>
        <item name="android:textColorHint">@color/colorSignatureOutline</item>
        <item name="attrBackgroundColor">@color/colorSignatureBackground</item>
        <item name="attrButtonColor">@color/colorSignatureButton</item>
        <item name="attrButtonTextColor">@color/colorSignatureBackground</item>
        <item name="attrOutlineColor">@color/colorSignatureOutline</item>
        <item name="attrNewIndicator">@color/colorNewIndicatorDark</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.UserDialog" parent="AppTheme.NoActionBar">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:background">@android:color/transparent</item>-->
    </style>

    <style name="Theme.UserDialogDark" parent="DarkTheme.NoActionBar">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:background">@android:color/transparent</item>-->
