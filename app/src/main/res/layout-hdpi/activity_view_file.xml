<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="pesh.mori.learnerapp.ViewFileActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:umanoDragView="@+id/sliding_up_panel_header"
    app:umanoScrollableView="@+id/layout_recycler_rec"
    android:animateLayoutChanges="true"
    android:gravity="bottom"
    app:umanoPanelHeight="45sp"
    app:umanoParallaxOffset="50sp"
    app:umanoShadowHeight="2sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout_main" />

        <FrameLayout
            android:id="@+id/layout_private"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_private_post"
                android:textSize="17sp"
                android:textColor="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Audio layout-->
            <LinearLayout
                android:id="@+id/view_file_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <VideoView
                        android:id="@+id/img_view_file_play_audio"
                        android:layout_width="match_parent"
                        android:layout_height="120sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/btn_view_file_time_play_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="80dp"
                        android:src="@drawable/baseline_play_arrow_white_24" />

                    <ImageView
                        android:id="@+id/btn_view_file_audio_static"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="80dp"
                        android:src="@drawable/baseline_audiotrack_white_48"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/buffer_progress_view_file_audio"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="80dp"
                        android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>

            <!--Video layout-->
            <LinearLayout
                android:id="@+id/view_file_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <VideoView
                        android:id="@+id/img_view_file_play_video"
                        android:layout_width="wrap_content"
                        android:layout_height="200sp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15sp"
                        android:adjustViewBounds="true"
                        android:background="#00ffffff"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/btn_view_file_time_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="80dp"
                        android:src="@drawable/baseline_play_arrow_white_24" />

                    <ProgressBar
                        android:id="@+id/buffer_progress_view_file"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="80dp"
                        android:visibility="gone"/>

                    <ImageButton
                        android:id="@+id/btn_view_file_play"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15sp"
                        android:background="@color/colorAccent"
                        android:src="@mipmap/baseline_play_circle_outline_white_18dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8sp"
                    android:orientation="vertical">

                    <!--Image layout-->
                    <LinearLayout
                        android:id="@+id/view_file_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/btn_view_file_select_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15sp"
                            android:adjustViewBounds="true"
                            android:background="#00ffffff"
                            android:scaleType="centerCrop" />

                    </LinearLayout>

                    <!--Doc Layout-->
                    <LinearLayout
                        android:id="@+id/view_file_layout_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btn_open_pdf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:elevation="2sp"
                            android:layout_gravity="center_horizontal"
                            android:text="Open document"
                            android:textAllCaps="false"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_file_layout_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8sp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8sp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posted at: "
                                android:textColor="@color/colorPrimaryDark"/>

                            <TextView
                                android:id="@+id/txt_view_file_file_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:textColor="@color/colorPrimaryDark"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Title"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/imageButton"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:padding="15sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Loading..." />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Price (Tokens)"
                            android:textColor="@color/colorGreen" />

                        <TextView
                            android:id="@+id/txt_view_file_file_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_green"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorGreen" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Bidding"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_bid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Description"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Institution"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_institution"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Faculty"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_faculty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15sp"
                            android:text="Course"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/txt_view_file_file_course"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txt_title_post"
                            android:layout_marginBottom="10sp"
                            android:layout_marginTop="3sp"
                            android:background="@drawable/input_outline_primary_dark"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:padding="15sp"
                            android:text="Loading..."
                            android:textColor="@color/colorPrimaryDark"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_view_file_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15sp"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="3sp"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="2">

                        <!--<Button-->
                        <!--android:id="@+id/btn_view_file_edit"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:background="@color/colorPrimary"-->
                        <!--android:text="Edit"-->
                        <!--android:textAllCaps="false"-->
                        <!--android:textColor="@color/white"-->
                        <!--android:textColorHint="@color/authui_colorPrimary" />-->

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_view_file_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:backgroundTint="@color/red"
                            app:backgroundTint="@color/red"
                            android:text="Delete"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textColorLink="@android:color/holo_red_light"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fab_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="0sp"
                fab:menu_fab_size="normal"
                fab:menu_showShadow="true"
                fab:menu_shadowColor="#66000000"
                fab:menu_shadowRadius="4dp"
                fab:menu_shadowXOffset="1dp"
                fab:menu_shadowYOffset="3dp"
                fab:menu_colorNormal="@color/colorPrimary"
                fab:menu_colorPressed="#E75043"
                fab:menu_colorRipple="#99FFFFFF"
                fab:menu_animationDelayPerItem="50"
                fab:menu_icon="@mipmap/baseline_add_white_18dp"
                fab:menu_labels_paddingTop="4dp"
                fab:menu_labels_paddingRight="8dp"
                fab:menu_labels_paddingBottom="4dp"
                fab:menu_labels_paddingLeft="8dp"
                fab:menu_labels_padding="8dp"
                fab:menu_labels_textColor="#FFFFFF"
                fab:menu_labels_textSize="14sp"
                fab:menu_labels_cornerRadius="3dp"
                fab:menu_labels_colorNormal="#333333"
                fab:menu_labels_colorPressed="@android:color/transparent"
                fab:menu_labels_colorRipple="@android:color/transparent"
                fab:menu_labels_showShadow="true"
                fab:menu_labels_singleLine="false"
                fab:menu_labels_ellipsize="none"
                fab:menu_labels_maxLines="-1"
                fab:menu_openDirection="up"
                fab:menu_backgroundColor="@android:color/transparent">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab_add_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_new_note"
                    fab:fab_size="mini"
                    fab:fab_label="New note" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab_view_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_notes"
                    fab:fab_size="mini"
                    fab:fab_label="View notes" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab_view_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_view_author"
                    fab:fab_size="mini"
                    fab:fab_label="Author details"
                    android:visibility="gone"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_report"
                    fab:fab_size="mini"
                    fab:fab_label="Report post"
                    android:visibility="gone"/>

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fab_delete_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    fab:fab_colorNormal="@color/red"
                    fab:menu_colorPressed="#E75043"
                    app:fab_colorRipple="#99FFFFFF"
                    fab:fab_size="mini"
                    fab:fab_label="Delete post"
                    android:visibility="gone"/>

            </com.github.clans.fab.FloatingActionMenu>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/sliding_up_panel"
        android:focusable="false"
        android:layout_marginTop="16sp"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/sliding_up_panel_header"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:textStyle="bold"
                android:padding="13sp"
                android:paddingStart="15sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:paddingLeft="15sp"
                android:layout_weight="1"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="13sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_whatshot_white_24"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layout_recycler_rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8sp"
            tools:layout_editor_absoluteX="8sp"/>
    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
