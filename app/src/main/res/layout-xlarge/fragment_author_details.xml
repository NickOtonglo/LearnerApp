<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="pesh.mori.learnerapp.ViewAuthorActivity_DetailsFragment"
    android:background="@color/colorPrimaryDark">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!--<TextView-->
        <!--android:id="@+id/message"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Get to know the Author"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:textColor="@color/white"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:text="@string/title_home"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/bio_author"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_main_profile"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:src="@drawable/ic_action_user"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Name..."
                android:id="@+id/author_name"
                android:textColor="#E7E7E7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="gender..."
                android:id="@+id/author_gender"
                android:textColor="#E7E7E7"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="About Author"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Skill or Occupation Sector"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Skills or Qualifications"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Facebook"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_facbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="Twitter"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_twitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15sp"
                android:text="LinkedIn"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/txt_view_linkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="3sp"
                android:background="@drawable/input_outline"
                android:padding="15sp"
                android:textColor="@color/white"
                android:text="Loading..."
                android:layout_marginBottom="40dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
