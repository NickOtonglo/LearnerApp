<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    tools:ignore="HardcodedText"
    android:background="#E7E7E7"
    tools:context=".BioActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7E7E7"
        tools:context="pesh.mori.learnerapp.BioActivity"
        tools:ignore="HardcodedText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center|top">
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_bio_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Female"
                    android:layout_marginRight="25sp"
                    android:padding="10dp"/>
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radio_bio_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Male"
                    android:layout_marginLeft="25sp"
                    android:padding="10dp"/>
            </RadioGroup>

            <EditText
                android:id="@+id/txt_bio_about"
                android:layout_width="match_parent"
                android:hint="tell us about yourself (max 100 words)"
                android:textColorHint="@color/grey"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="100"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="skill or occupation sector"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:padding="10dp"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_bio_skills"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/input_outline"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/txt_bio_skills"
                android:layout_width="match_parent"
                android:hint="your skills or qualification (max 100 words)"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="100"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_bio_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="facebook profile"
                    android:background="@drawable/input_outline"
                    android:padding="9dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_bio_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="twitter account"
                    android:inputType="text"
                    android:background="@drawable/input_outline"
                    android:padding="9dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_bio_linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="linkedin profile"
                    android:background="@drawable/input_outline"
                    android:padding="9dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_bio_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimaryDark"
                app:backgroundTint="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>