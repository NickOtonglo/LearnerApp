<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:padding="5sp"
    tools:context="pesh.mori.learnerapp.AuthenticationActivity"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_warning_black_24dp"
        android:layout_gravity="center"
        android:layout_margin="10sp"/>

    <TextView
        android:id="@+id/txtTransactPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:padding="5sp"
        android:text="In order to proceed, kindly confirm if this is your account!"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/red"/>

    <EditText
        android:id="@+id/txt_auth_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:padding="15sp"
        android:background="@drawable/input_outline"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter your password"/>

    <Button
        android:id="@+id/btn_auth_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"
        android:text="Authenticate"
        android:textAllCaps="false"
        android:background="@drawable/input_outline_greenss"
        android:textColor="@color/white"
        android:visibility="visible"/>

</LinearLayout>