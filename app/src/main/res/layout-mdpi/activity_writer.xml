<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/drawer">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:src="@drawable/artist"
            app:civ_border_color="@color/grey"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.00"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/blue"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linda"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="request type:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="find a writer"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="institution of learning:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University Of Nairobi"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="request title:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="An Introduction To Literary Genres"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="180dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="request type:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="academic essay"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="210dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="request deadine:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2018"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:layout_marginTop="240dp"
            android:layout_marginRight="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button"
            android:layout_width="60dp"
            android:onClick="doThis"
            android:layout_height="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_record_voice_over_black_24dp"/>
    </FrameLayout>
