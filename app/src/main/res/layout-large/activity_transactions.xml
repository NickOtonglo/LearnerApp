<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    tools:context="pesh.mori.learnerapp.TransactionsActivity">

    <include
        layout="@layout/app_bar_layout_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Image layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/btn_view_file_select_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <!--Audio layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/img_view_file_play_audio"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@color/black"/>

                <ImageView
                    android:id="@+id/btn_view_file_time_play_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_play_arrow_white_24" />

                <ImageView
                    android:id="@+id/btn_view_file_audio_static"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_audiotrack_white_48"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/buffer_progress_view_file_audio"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>

        <!--Video layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <VideoView
                    android:id="@+id/img_view_file_play_video"
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/btn_view_file_time_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:src="@drawable/baseline_play_arrow_white_24" />

                <ProgressBar
                    android:id="@+id/buffer_progress_view_file"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="80dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="10">

            </LinearLayout>

        </LinearLayout>

        <!--Doc layout-->
        <LinearLayout
            android:id="@+id/view_file_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfview_file_select_doc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8sp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_author"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_user"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1sp"
                        android:layout_margin="0sp"
                        app:civ_fill_color="@color/white"/>
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/txt_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="8sp"
                    android:text="Author"
                    android:textColor="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:padding="8sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted at: "
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Title"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageButton"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:padding="15sp"
                        android:ellipsize="none"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Loading..." />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Price (Tokens)"
                        android:textColor="@color/colorGreen" />

                    <TextView
                        android:id="@+id/txt_view_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_green"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorGreen" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Bidding"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_bid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15sp"
                        android:text="Brief"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout_files"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:text="Institution"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_institution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:text="Faculty"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:text="Course"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_course"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="3sp"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        android:padding="15sp"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/layout_diy">
                    <TextView
                        android:text="Tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/txt_view_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:background="@drawable/input_outline_primary_dark"
                        android:ems="10"
                        android:layout_marginTop="3sp"
                        android:padding="15sp"
                        android:layout_below="@+id/txt_title_post"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Loading..."
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTransactPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:padding="5sp"
                        android:text="..."
                        android:textColor="@color/colorAccent"
                        android:gravity="center"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5sp"
                        android:weightSum="1">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTransactBid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2sp"
                            android:text="Bid"
                            android:background="@drawable/button_app_theme"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:layout_weight="0.5"
                            android:visibility="gone"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTransactPurchase"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2sp"
                            android:text="Purchase"
                            android:background="@drawable/button_app_theme"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_weight="0.5"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTransactCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="6sp"
                        android:text="Cancel"
                        android:backgroundTint="@color/colorPrimary"
                        app:backgroundTint="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>
